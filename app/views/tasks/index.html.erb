<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Start date planned</th>
    <th>Start date actual</th>
    <th>End date planned</th>
    <th>End date actual</th>
    <th>Desc</th>
    <th>Testplans</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.start_date_planned %></td>
    <td><%= task.start_date_actual %></td>
    <td><%= task.end_date_planned %></td>
    <td><%= task.end_date_actual %></td>
    <td><%= task.desc %></td>
    <td><%= task.testplans %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

