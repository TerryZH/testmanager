<h1>Listing testcases</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Repro steps</th>
    <th>Expected results</th>
    <th>Automated</th>
    <th>Author</th>
    <th>Locales</th>
    <th>Function modules</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @testcases.each do |testcase| %>
  <tr>
    <td><%= testcase.title %></td>
    <td><%= testcase.repro_steps %></td>
    <td><%= testcase.expected_results %></td>
    <td><%= testcase.automated %></td>
    <td><%= testcase.user.name %></td>
    <td><%= testcase.locales.collect do |s| [s.locale_name] end.join ", " %></td>
    <td><%= testcase.function_modules.collect do |s| [s.module_name] end.join ", " %></td>
    <td><%= link_to 'Show', testcase %></td>
    <td><%= link_to 'Edit', edit_testcase_path(testcase) %></td>
    <td><%= link_to 'Destroy', testcase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

