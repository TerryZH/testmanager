<h1>Listing testresults</h1>

<table>
  <tr>
    <th>User</th>
    <th>Testplan</th>
    <th>Testcase</th>
    <th>Locale</th>
    <th>Test result</th>
    <th>Fail bugs</th>
    <th>Block bugs</th>
    <th>Comments</th>
    <th>Browsers</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @testresults.each do |testresult| %>
  <tr>
    <td><%= testresult.user %></td>
    <td><%= testresult.testplan %></td>
    <td><%= testresult.testcase %></td>
    <td><%= testresult.locale %></td>
    <td><%= testresult.test_result %></td>
    <td><%= testresult.fail_bugs.collect do |s| [s.locale_name] end.join ", " %></td>
    <td><%= testresult.block_bugs.collect do |s| [s.locale_name] end.join ", " %></td>
    <td><%= testresult.comments %></td>
    <td><%= testresult.browsers %></td>
    <td><%= link_to 'Show', testresult %></td>
    <td><%= link_to 'Edit', edit_testresult_path(testresult) %></td>
    <td><%= link_to 'Destroy', testresult, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

